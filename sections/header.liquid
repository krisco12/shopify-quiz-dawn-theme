{% comment %}
  Header section for KC Focus theme
{% endcomment %}

<header class="header" role="banner">
  <div class="header__wrapper">
    {% if section.settings.logo != blank %}
      <a href="{{ routes.root_url }}" class="header__logo">
        {{ section.settings.logo | image_url: width: 200 | image_tag: alt: shop.name }}
      </a>
    {% else %}
      <a href="{{ routes.root_url }}" class="header__heading">
        <h1>{{ shop.name }}</h1>
      </a>
    {% endif %}
    
    {% if section.settings.menu != blank %}
      <nav class="header__nav" role="navigation">
        <ul class="header__menu">
          {% for link in section.settings.menu.links %}
            <li class="header__menu-item">
              <a href="{{ link.url }}" class="header__menu-link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  </div>
</header>

<style>
  .header {
    padding: 1rem;
    background-color: #ffffff;
    border-bottom: 1px solid #e5e5e5;
  }
  .header__wrapper {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .header__heading h1 {
    margin: 0;
    font-size: 1.5rem;
    color: #000;
  }
  .header__menu {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }
  .header__menu-link {
    text-decoration: none;
    color: #000;
  }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
